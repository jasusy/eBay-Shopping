            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView android:id="@+id/result_keyword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Result for 'Nexus 6'"
                android:textSize="20sp"/>

            <View android:id="@+id/result_hr0"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>

            <LinearLayout android:id="@+id/item0_View"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3">
                    <ImageView android:id="@+id/item0_Image"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:onClick="imageOnClick"
                        android:tag="item0"/>
                    <TextView android:id="@+id/item0_Image_NA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="20sp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="7"
                    android:layout_marginStart="10dp">

                    <TextView android:id="@+id/item0_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:onClick="titleOnClick"
                        android:tag="item0"/>

                    <TextView android:id="@+id/item0_Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                </RelativeLayout>
            </LinearLayout>

